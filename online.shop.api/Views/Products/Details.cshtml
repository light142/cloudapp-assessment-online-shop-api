@model Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <!-- Product Image -->
        <div class="col-lg-5 col-md-6 text-center">
            <div class="image-container p-3 border rounded shadow-sm bg-white">
                <img src="@Model.ImageUrl" class="img-fluid product-image" alt="@Model.Name">
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-lg-6 col-md-6">
            <div class="product-info p-4 bg-light rounded shadow-sm">
                <h1 class="fw-bold">@Model.Name</h1>

                <div class="rating my-2">
                    ‚≠ê‚≠ê‚≠ê‚≠ê‚òÜ <span class="text-muted">(4.5/5 based on 120 reviews)</span>
                </div>

                <h3 class="text-primary my-3">$@Model.Price</h3>

                <p class="text-muted fs-5">@Model.Description</p>

                <div class="features p-3 border rounded bg-white">
                    <ul class="list-unstyled">
                        <li>‚úÖ High-quality materials</li>
                        <li>‚úÖ 1-Year Warranty</li>
                        <li>‚úÖ Free Shipping Available</li>
                    </ul>
                </div>

                <div class="quantity-section my-4 d-flex align-items-center">
                    <label class="fw-bold me-2">Quantity:</label>
                    <button class="inner-quantity-btn decrease btn btn-outline-secondary px-3" data-id="@Model.Id">-</button>
                    <span id="inner-quantity-@Model.Id" class="mx-3 fs-5">1</span>
                    <button class="inner-quantity-btn increase btn btn-outline-secondary px-3" data-id="@Model.Id">+</button>
                </div>

                <button class="add-to-cart-btn btn btn-primary btn-lg w-100 mt-3" data-product-id="@Model.Id">
                    üõí Add to Cart
                </button>
            </div>
        </div>
    </div>
</div>
