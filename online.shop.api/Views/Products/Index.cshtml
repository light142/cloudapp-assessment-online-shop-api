@model ProductViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h2 class="text-center my-4 fw-bold">Explore Our Premium Products</h2>
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card" data-product-id="@product.Id">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body text-center">
                        <h5 class="fw-bold">@product.Name</h5>
                        <p class="text-muted">$@product.Price</p>

                        <button class="add-to-cart-btn btn btn-primary" onclick="addToCart(this)"
                            data-product-id="@product.Id">
                            üõí Add to Cart
                        </button>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <button class="add-to-wishlist-btn btn btn-secondary" data-product-id="@product.Id">
                                @if (Model.WishlistProductIds.Contains(product.Id))
                                {
                                    <span>‚ùå Remove from Wishlist</span>
                                }
                                else
                                {
                                    <span>‚ù§Ô∏è Add to Wishlist</span>
                                }
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
