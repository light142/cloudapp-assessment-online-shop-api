@model IEnumerable<Product>

@{
    ViewData["Title"] = "Your Wishlist";
}

<div class="container">
    <h2 class="text-center my-4 fw-bold">Your Wishlist</h2>
    @if (!Model.Any())
    {
        <p class="text-center">Your wishlist is empty. Start adding products!</p>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card product-card" data-product-id="@product.Id">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body text-center">
                            <h5 class="fw-bold">@product.Name</h5>
                            <p class="text-muted">$@product.Price</p>

                            <button class="remove-from-wishlist-btn btn btn-danger" data-product-id="@product.Id">
                                üóëÔ∏è Remove from Wishlist
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
